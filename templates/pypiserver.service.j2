[Unit]
Description=Pypi server daemon
Documentation=
After=network.target
Wants=

[Service]
Environment="SCRIPT_NAME={{ relkit_pypiserver_script_name }}"
ExecStart=/usr/bin/pypi-server --interface {{ relkit_pypiserver_http_address }} --port {{ relkit_pypiserver_http_port }} --passwords /etc/pypiserver/htaccess {{ '--overwrite' if relkit_pypiserver_allow_overwrite else '' }} {{ '--disable-fallback' if relkit_pypiserver_disable_fallback else '' }} /var/cache/pypiserver
Restart=always
User=pypiserver
Group=pypiserver
WorkingDirectory=/var/cache/pypiserver
